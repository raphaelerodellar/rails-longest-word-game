<h1 class="mx-3 my-5">Welcome to the longest word game!</h1>
<div class="d-flex">
  <% @letters.each do |letter| %>
    <div class="card-letter"><%= letter%></div>
    <%# <div class="m-3 p-4 font-weight-bold text-primary bg-light border border-primary rounded"><%= letter</div> %>
  <% end %>
</div>
<form action="/score" method="POST" data-turbo="false">
  <div class="d-flex align-items-end m-3">
    <div class="form-group col-md-6">
      <label class="py-2">What is the longest word you can find?</label>
      <input type="text" name="word" class="form-control">
    </div>
    <div class="form-group col-md-6">
      <input type="submit" value="Send!" class="btn btn-outline-success mx-2">
    </div>
  </div>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
